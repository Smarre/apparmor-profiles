  owner @{HOME}/.config/akonadi/* r,
  owner @{HOME}/.config/akonadi/* w,
  owner @{HOME}/.config/ibus/bus/* r,
  owner @{HOME}/.config/kdeglobals r,
  owner @{HOME}/.local/share/akonadi/** r,
  owner @{HOME}/.local/share/akonadi/** w,
  owner @{HOME}/.local/share/local-mail/ r,
  owner @{HOME}/.local/share/local-mail/** r,
  owner @{HOME}/.local/share/local-mail/** w,
  owner @{HOME}/.local/share/local-mail/**/ r,
  owner @{HOME}/.local/share/local-mail/*/ r,
  owner @{HOME}/.local/share/mime/generic-icons r,


  /usr/bin/cpio mrix,
  /usr/bin/curl mrix,
  /usr/bin/killall mrix,
  /usr/bin/ln mrix,
  /usr/bin/mkdir mrix,
  /usr/bin/mountpoint mrix,
  /usr/bin/nice ix,
  /usr/bin/perl ix,
  /usr/bin/rm mrix,
  /usr/bin/screen mrix,
  /usr/bin/sed mrix,
  /usr/bin/sleep mrix,
  /usr/bin/slptool mrix,
  /usr/bin/stty mrix,
  /usr/bin/systemctl Px,
  /usr/bin/uname mrix,
  /usr/sbin/obsworker mrix,

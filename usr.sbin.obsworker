  capability dac_override,
  capability fsetid,
  capability setgid,
  capability setuid,
  capability sys_ptrace,
  capability sys_tty_config,

  signal send set=term peer=unconfined,

  ptrace read,

  /bin/bash ix,
  /proc/*/cmdline r,
  /proc/*/stat r,
  /proc/*/statm r,
  /run/obs/ w,
  /run/obs/worker/*/worker{,.new}/bs_worker Cx -> bs_worker,

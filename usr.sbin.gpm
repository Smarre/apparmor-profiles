# Profile for mouse on TTY (Linuxâ€™s default console)

#include <tunables/global>

/usr/sbin/gpm {
  #include <abstractions/base>
  #include <abstractions/consoles>

  capability sys_tty_config,
  capability sys_admin,

  /usr/sbin/gpm mr,
  /dev/tty* rw,
  /dev/input/mice rw,
  /dev/gpmctl rw,
  /run/gpm.pid rw,
}
